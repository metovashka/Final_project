{% block body %}
    <h1>Просмотр записи</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visit.id }}</td>
            </tr>
            <tr>
                <th>Symptom</th>
                <td>{{ visit.symptom }}</td>
