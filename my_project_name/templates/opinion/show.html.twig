{% extends 'base.html.twig' %}

{% block title %}Opinion{% endblock %}

{% block body %}
    <h1>Opinion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>№</th>
                <td>{{ opinion.id }}</td>
            </tr>
            <tr>
                <th>Пользователь</th>
                <td>{{opinion.owner}}</td>
            </tr>
            <tr>
                <th>Текст</th>
                <td>{{ opinion.text }}</td>
